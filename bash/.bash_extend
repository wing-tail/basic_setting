
if [ -f ~/.bash/my_extend/base ]; then
    . ~/.bash/my_extend/base
fi

export SCREENDIR=$HOME/.screen

# run screen
if [[ -S "$SSH_AUTH_SOCK" && ! -h "$SSH_AUTH_SOCK" ]]; then
    ln -sf "$SSH_AUTH_SOCK" ~/.ssh/ssh_auth_sock;
fi

export SSH_AUTH_SOCK=~/.ssh/ssh_auth_sock;

if [ $SHLVL = 1 ];then
  screen -xR 
fi
